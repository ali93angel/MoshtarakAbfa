<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sa_sh.sepehr.moshtarakapp.Activities.SignAccountActivity"
    tools:showIn="@layout/sign_account_app_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_large_padding"
            android:paddingRight="@dimen/activity_large_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:text="@string/file_number"
                android:textSize="@dimen/textSizeMedium" />

            <EditText
                android:id="@+id/editTextFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_margin"
                android:background="@drawable/border_gray_"
                android:inputType="number"
                android:padding="@dimen/activity_large_padding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:text="@string/account_number"
                android:textSize="@dimen/textSizeMedium" />

            <EditText
                android:id="@+id/editTextAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_margin"
                android:background="@drawable/border_gray_"
                android:inputType="number"
                android:padding="@dimen/activity_large_padding" />

            <Button
                android:id="@+id/buttonSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_margin"
                android:background="@drawable/border_yellow_"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeMedium" />

            <Button
                android:id="@+id/buttonLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_mid_margin"
                android:background="@drawable/border_red_"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_mid_margin"
            android:background="@drawable/border_gray_"
            android:orientation="vertical"
            android:padding="@dimen/activity_mid_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_mid_margin"
                android:layout_marginRight="@dimen/activity_mid_margin"
                android:layout_marginTop="@dimen/activity_mid_margin"
                android:gravity="start"
                android:text="@string/dear_user"
                android:textColor="@color/red1"
                android:textSize="@dimen/textSizeSmall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/activity_mid_margin"
                android:layout_marginRight="@dimen/activity_mid_margin"
                android:gravity="right"
                android:text="@string/input_message"
                android:textSize="@dimen/textSizeSmall" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
