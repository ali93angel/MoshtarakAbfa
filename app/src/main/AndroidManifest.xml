<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sa_sh.sepehr.moshtarakapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Gray.NoActionBar">
        <activity
            android:name=".Activities.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.LastBillActivity"
            android:label="@string/title_activity_last_bill"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.CardexActivity"
            android:label="@string/title_activity_kardex"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.BaseInfoActivity"
            android:label="@string/title_activity_base_info"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.SignAccountActivity"
            android:label="@string/title_activity_sign_account"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.LearningActivity"
            android:label="@string/title_activity_learning"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.UsingMethodActivity"
            android:label="@string/title_activity_learning_method"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.SetKontorActivity"
            android:label="@string/title_activity_counter"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>